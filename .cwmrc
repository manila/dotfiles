# CWM config

# Make room for the status bar
gap		20 0 0 0

# "Virtual" Desktop Settings
sticky		yes

# Key bindings
bind-key C-1	group-only-1
bind-key C-2	group-only-2
bind-key C-3	group-only-3
bind-key C-4	group-only-4
bind-key C-5	group-only-5
bind-key C-6	group-only-6
bind-key C-7	group-only-7
bind-key C-8	group-only-8
bind-key C-9	group-only-9
bind-key C-0	nogroup

bind-key CM-1	window-movetogroup-1
bind-key CM-2	window-movetogroup-2
bind-key CM-3	window-movetogroup-3
bind-key CM-4	window-movetogroup-4
bind-key CM-5	window-movetogroup-5
bind-key CM-6	window-movetogroup-6
bind-key CM-7	window-movetogroup-7
bind-key CM-8	window-movetogroup-8
bind-key CM-9	window-movetogroup-9

# Fill Screen w/o going full screen (firefox)
bind-key CM-m	maximize
bind-key CM-f	fullscreen
bind-key CM-h	htile
bind-key CM-v	vtile

# Style and Color
borderwidth		1
color activeborder	'#222222'
color inactiveborder	'#000016'
